{
  "segmentation_training": {
    "use_model": "Unet",
    "k_fold": 5,
    "epochs": 100,
    "batch_size": 8,
    "shuffle": true,
    "validation_split": null,
    "optimizer": {
      "type": "Adam",
      "learning_rate": 0.0004
    },
    "loss": "binary_crossentropy",
    "metrics": ["accuracy", "precision", "recall", "dice"],
    "early_stopping": {
      "use": false,
      "monitor": "val_dice",
      "patience": 10
    },
    "lr_scheduler": {
      "use": false,
      "type": "StepLR",
      "step_size": 30,
      "gamma": 0.1
    }
  },
  "classification_training":{
      "use_model": "Resnet18",
      "optimizer": "adam",
      "loss": "binary_crossentropy",
      "epochs": 50,
      "batch_size": 16,
      "validation_split": 0.2
  }
}